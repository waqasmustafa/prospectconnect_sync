<!-- prospectconnect_sync/views/pc_user_mapping_views.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pc_user_mapping_tree" model="ir.ui.view">
        <field name="name">pc.user.mapping.tree</field>
        <field name="model">pc.user.mapping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="odoo_user_id"/>
                <field name="pc_user_id"/>
                <field name="pc_user_name"/>
            </tree>
        </field>
    </record>

    <record id="view_pc_user_mapping_form" model="ir.ui.view">
        <field name="name">pc.user.mapping.form</field>
        <field name="model">pc.user.mapping</field>
        <field name="arch" type="xml">
            <form string="ProspectConnect User Mapping">
                <sheet>
                    <group>
                        <field name="odoo_user_id"/>
                        <field name="pc_user_id"/>
                        <field name="pc_user_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
